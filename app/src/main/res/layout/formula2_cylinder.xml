<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="315dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/item_cylinder" />

    <EditText
        android:id="@+id/fCyl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/fCyl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/fCyl1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fCyl1"
        app:layout_constraintTop_toBottomOf="@+id/fCyl1" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Radius"
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fCyl1"
        app:layout_constraintEnd_toStartOf="@+id/fCyl1"
        app:layout_constraintTop_toTopOf="@+id/fCyl1" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Height"
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fCyl2"
        app:layout_constraintEnd_toStartOf="@+id/fCyl2"
        app:layout_constraintTop_toTopOf="@+id/fCyl2" />

    <TextView
        android:id="@+id/fCylResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text=""
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCylinder"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btnCylinder"
        app:layout_constraintTop_toBottomOf="@+id/btnCylinder" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto"
        android:text="Result"
        android:textColor="@color/color_secondary"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/fCylResult"
        app:layout_constraintEnd_toStartOf="@+id/fCylResult"
        app:layout_constraintTop_toTopOf="@+id/fCylResult"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCylinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/color_secondary"
        android:fontFamily="@font/roboto"
        android:onClick="onClick"
        android:text="Calculate"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/fCyl2"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/fCyl2"
        app:layout_constraintTop_toBottomOf="@+id/fCyl2" />

</androidx.constraintlayout.widget.ConstraintLayout>