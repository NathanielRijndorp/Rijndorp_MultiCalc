<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="333dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096"
        app:srcCompat="@drawable/item_sphere" />

    <EditText
        android:id="@+id/fSphr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Radius"
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fSphr1"
        app:layout_constraintEnd_toStartOf="@+id/fSphr1"
        app:layout_constraintTop_toTopOf="@+id/fSphr1" />

    <TextView
        android:id="@+id/fSphrResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto"
        android:text=""
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btnSphr"
        app:layout_constraintStart_toStartOf="@+id/btnSphr"
        app:layout_constraintTop_toBottomOf="@+id/btnSphr" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto"
        android:text="Result"
        android:textColor="@color/color_secondary"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/fSphrResult"
        app:layout_constraintEnd_toStartOf="@+id/fSphrResult"
        app:layout_constraintTop_toTopOf="@+id/fSphrResult"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSphr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/color_secondary"
        android:fontFamily="@font/roboto"
        android:onClick="onClick"
        android:text="Calculate"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/fSphr1"
        app:layout_constraintStart_toStartOf="@+id/fSphr1"
        app:layout_constraintTop_toBottomOf="@+id/fSphr1" />
</androidx.constraintlayout.widget.ConstraintLayout>