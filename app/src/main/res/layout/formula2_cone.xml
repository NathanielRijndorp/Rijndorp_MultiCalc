<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="332dp"
        android:layout_height="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093"
        app:srcCompat="@drawable/item_cone" />

    <EditText
        android:id="@+id/fCone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/fCone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/fCone1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fCone1"
        app:layout_constraintTop_toBottomOf="@+id/fCone1" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Height"
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fCone1"
        app:layout_constraintEnd_toStartOf="@+id/fCone1"
        app:layout_constraintTop_toTopOf="@+id/fCone1" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Radius"
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fCone2"
        app:layout_constraintEnd_toStartOf="@+id/fCone2"
        app:layout_constraintTop_toTopOf="@+id/fCone2" />

    <TextView
        android:id="@+id/fConeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text=""
        android:textColor="@color/color_secondary"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btnCone"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/btnCone"
        app:layout_constraintTop_toBottomOf="@+id/btnCone" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto"
        android:text="Result"
        android:textColor="@color/color_secondary"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/fConeResult"
        app:layout_constraintEnd_toStartOf="@+id/fConeResult"
        app:layout_constraintTop_toTopOf="@+id/fConeResult"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/color_secondary"
        android:fontFamily="@font/roboto"
        android:onClick="onClick"
        android:text="Calculate"
        android:textColor="@color/color_accent"
        app:layout_constraintEnd_toEndOf="@+id/fCone2"
        app:layout_constraintStart_toStartOf="@+id/fCone2"
        app:layout_constraintTop_toBottomOf="@+id/fCone2" />
</androidx.constraintlayout.widget.ConstraintLayout>