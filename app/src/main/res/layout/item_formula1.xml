<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_formula1_1"
        android:layout_width="415dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/item_speedformula" />

    <TextView
        android:id="@+id/tv_formula1_1"
        android:layout_width="164dp"
        android:layout_height="90dp"
        android:fontFamily="@font/roboto"
        android:text="Speed Formula"
        android:textAlignment="center"
        android:textColor="@color/color_secondary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_formula1_1"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/iv_formula1_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_formula1_1" />
</androidx.constraintlayout.widget.ConstraintLayout>